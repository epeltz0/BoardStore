@model IEnumerable<BoardBrowser.Models.BoardListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Available Boards</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BoardId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoardCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoardQuality)
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BoardId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BoardName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BoardCategory)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BoardQuality)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BoardId }) |
        @Html.ActionLink("Details", "Details", new { id = item.BoardId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BoardId })
    </td>
</tr>
    }
</table>

