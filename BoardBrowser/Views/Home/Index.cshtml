@{
    ViewBag.Title = "Home Page";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="center-block" src="https://cdn.shopify.com/s/files/1/2941/2202/products/PS21W0032-ITACHICROWSDECK_1024x1024_61c15b2f-82e0-46b4-b68c-30dea32d14a7_700x700.jpg?v=1616273967" alt="Primitive x Naruto Skateboard: Itachi">
        </div>

        <div class="item">
            <img class="center-block" src="https://i.pinimg.com/originals/1b/45/37/1b45377aaa0a7e9d0ad9aa11b3733fc4.jpg" alt="Landyatchz Longboard: Fox">
        </div>

        <div class="item">
            <img class="center-block" src="https://images.the-house.com/santacruz-lion-god-drop-thru-longboard-complete-16-zoom.jpg" alt="Santa Cruz Longboard: Lion">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
        <div class="card">
            <img src="https://scene7.zumiez.com/is/image/zumiez/product_main_medium/Holiday-Meerkat-8.0%22-Skateboard-Complete-_332655-front-US.jpg" class="card-img-top" alt="Skateboards">
            <div class="card-body">
                <h5 class="card-title">Skateboards</h5>
                <p class="card-text">Are you just a classic skateboarder? Looking for a new board to shred up or even just to cruise around town? Check out our wide selection of skateboards! </p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <img src="https://images-na.ssl-images-amazon.com/images/I/71-l2bTdsiL._AC_SX425_.jpg" class="card-img-top" alt="Pennyboard">
            <div class="card-body">
                <h5 class="card-title">Pennyboards</h5>
                <p class="card-text">For those who like to cruise and relax without the hassel of carrying around a longboard, We have many different pennyboard options and style variants to meet your desires! </p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <img src="https://images-na.ssl-images-amazon.com/images/I/81tlMIfHI8L._AC_SY606_.jpg" class="card-img-top" alt="Longboard">
            <div class="card-body">
                <h5 class="card-title">Longboards</h5>
                <p class="card-text">Thinking about going for a chill cruise down a windy trail? Maybe thinking about speeding down a deep slope? We have a variety of longboards for every type of longboarder out there! </p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <img src="https://cdn.shopify.com/s/files/1/0012/2362/2708/products/1000_x_1000_Skateboard_Accessories_Front_Shot_grande.png?v=1606063113" class="card-img-top" alt="Accessories">
            <div class="card-body">
                <h5 class="card-title">Accessories</h5>
                <p class="card-text">We have a wide array of accessories for all your skating needs! From everything to grip tape to hardware you can find everything you'd ever need right here for a fair and afforable price! </p>
            </div>
        </div>
    </div>
</div>

